function length(mat){
    var m = math.size(mat);
    var row = m.subset(math.index(0));
    var col = m.subset(math.index(1));
    return (Math.max(row,col));
}

function rand(num){
    var mat = math.zeros(num, num);
    for(var i = 0;i < num;i++){
        for(var j = 0;j < num;j++){
            mat.subset(math.index(i,j), Math.random());
        }
    }
    return mat;
}
